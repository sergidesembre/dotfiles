[user]
    name = Sergi Desembre
    email = sergi.desembre@gmail.com
    signingkey = AB19D4C3

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green
    changed = yellow
    untracked = red

[core]
    ui = true
    editor = nano
    autocrlf = input
    trustctime = false
    precomposeunicode = false
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore_global

[help]
    autocorrect = 1

[apply]
    whitespace = fix

[github]
    user = sergidesembre

[alias]
    cm = commit
    st = status
    br = branch
    ps = push origin
    ch = checkout
    ds = diff --staged
    df = diff
    feature = !sh -c 'git checkout -b feature/$1' -
    fix = !sh -c 'git checkout -b hotfix/$1' -
    bug = !sh -c 'git checkout -b bugfix/$1' -
    prev = check-ref-format --branch @{-1}
    log-nice = log --graph --decorate --pretty=oneline --abbrev-commit

[push]
    default = current

[commit]
    template = ~/.gitmessage
    gpgsign = true

[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    suppresscc = self
    smtpuser = sergi.desembre+git@gmail.com

[gitflow "branch"]
    master = master

[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    bugfix = bugfix/

[pager]
    diff = diff-highlight | less
    log = diff-highlight | less
    show = diff-highlight | less

[apply]
    whitespace = fix
